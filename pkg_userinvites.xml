<?xml version="1.0" encoding="UTF-8" ?>
<extension type="package" version="3.2.0" method="upgrade">

    <name>User Invites Package</name>
    <author>Andy Kirk</author>
    <authorEmail>andy.kirk@npeu.ox.ac.uk</authorEmail>
    <authorUrl>https://www.npeu.ox.ac.uk</authorUrl>
    <creationDate>January 2019</creationDate>
    <copyright>(C) NPEU 2019</copyright>
    <license>MIT License; see LICENSE.md</license>

    <packagename>userinvites</packagename>
    <packager>Andy Kirk</packager>
    <packagerurl>https://github.com/NPEU/pkg_userinvites/archive/v2.0.0.zip</packagerurl>

    <!--  The version string is recorded in the components table -->
    <version>2.0.4</version>
    <!-- The description is optional and defaults to the name -->
    <description>Adds an 'invitation only' layer over Joomla's registration system.</description>

    <updateservers>
        <!-- Note: No spaces or linebreaks allowed between the server tags -->
        <server type="extension" name="NPEU: pkg_userinvites Update Site">https://raw.githubusercontent.com/NPEU/pkg_userinvites/master/update-manifest.xml</server>
    </updateservers>

    <files folder="packages">
        <file type="component" id="com_userinvites">com_userinvites.zip</file>
        <file type="plugin" id="userinvites" group="system">plg_userinvites.zip</file>
    </files>

</extension>